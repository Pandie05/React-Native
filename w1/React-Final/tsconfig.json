{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "types": ["react", "react-native"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
